generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ── Enums ──────────────────────────────────────────────────────

enum Role {
  ADMIN
  COORDENADOR
  GERENTE
  GESTOR
  LIDERADO
}

enum TaskStatus {
  A_FAZER
  EM_ANDAMENTO
  PAUSADO
  CONCLUIDO
}

enum Priority {
  ALTA
  MEDIA
  BAIXA
}

enum TaskType {
  VISTORIA
  RELATORIO
  INSPECAO
  LEVANTAMENTO
  AUDITORIA
  MAPEAMENTO
  REGULARIZACAO
  MEDICAO
}

// ── Models ─────────────────────────────────────────────────────

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(LIDERADO)
  avatar    String?
  sector    Sector?  @relation(fields: [sectorId], references: [id])
  sectorId  Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tasksAssigned Task[]    @relation("TaskResponsible")
  subtasks      Subtask[] @relation("SubtaskResponsible")

  @@map("users")
}

model Sector {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users    User[]
  tasks    Task[]
  subtasks Subtask[]

  @@map("sectors")
}

model Contract {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tasks Task[]

  @@map("contracts")
}

model City {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  neighborhoods Neighborhood[]
  tasks         Task[]

  @@map("cities")
}

model Neighborhood {
  id        Int      @id @default(autoincrement())
  name      String
  city      City     @relation(fields: [cityId], references: [id])
  cityId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tasks Task[]

  @@unique([name, cityId])
  @@map("neighborhoods")
}

model Task {
  id          Int        @id @default(autoincrement())
  title       String
  description String?
  status      TaskStatus @default(A_FAZER)
  priority    Priority   @default(MEDIA)
  type        TaskType
  deadline    DateTime?
  link        String?
  quadra      String?
  lote        String?
  timeSpent   Int        @default(0) // minutes

  // Timestamps de ciclo de vida
  assignedAt  DateTime?
  startedAt   DateTime?
  pausedAt    DateTime?
  completedAt DateTime?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  // Relations
  responsible   User?         @relation("TaskResponsible", fields: [responsibleId], references: [id])
  responsibleId Int?
  sector        Sector?       @relation(fields: [sectorId], references: [id])
  sectorId      Int?
  contract      Contract?     @relation(fields: [contractId], references: [id])
  contractId    Int?
  city          City?         @relation(fields: [cityId], references: [id])
  cityId        Int?
  neighborhood  Neighborhood? @relation(fields: [neighborhoodId], references: [id])
  neighborhoodId Int?

  subtasks Subtask[]

  @@map("tasks")
}

model Subtask {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  done        Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  task          Task    @relation(fields: [taskId], references: [id], onDelete: Cascade)
  taskId        Int
  sector        Sector? @relation(fields: [sectorId], references: [id])
  sectorId      Int?
  responsible   User?   @relation("SubtaskResponsible", fields: [responsibleId], references: [id])
  responsibleId Int?

  @@map("subtasks")
}

model Template {
  id        Int      @id @default(autoincrement())
  name      String
  sector    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  templateTasks TemplateTask[]

  @@map("templates")
}

model TemplateTask {
  id         Int      @id @default(autoincrement())
  title      String
  order      Int      @default(0)
  template   Template @relation(fields: [templateId], references: [id], onDelete: Cascade)
  templateId Int

  subtasks TemplateSubtask[]

  @@map("template_tasks")
}

model TemplateSubtask {
  id             Int          @id @default(autoincrement())
  title          String
  order          Int          @default(0)
  templateTask   TemplateTask @relation(fields: [templateTaskId], references: [id], onDelete: Cascade)
  templateTaskId Int

  @@map("template_subtasks")
}
